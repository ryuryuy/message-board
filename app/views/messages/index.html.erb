<!--<h1>メッセージ一覧</h1>-->
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
<div class="form-group">
<label for="message_name" class="control-label col-md-2">名前:</label>
<div class="col-md-8">
  <%= f.text_field :name, :class => "form-control" %>
</div>
</div>

<div class="form-group">
<label for="message_name" class="control-label col-md-2">内容:</label>
<div class="col-md-8">
<!--  <%= f.text_field :body %>-->
<%= f.text_area :body, :class => "form-control" %>
</div>
</div>
<div class="form-group">
<div class="col-xs-offset-2 col-xs-10">
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
</div>
</div>
</form>